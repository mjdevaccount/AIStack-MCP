{
    "mcpServers":  {
                       "filesystem":  {
                                          "command":  "npx",
                                          "args":  [
                                                       "-y",
                                                       "@modelcontextprotocol/server-filesystem",
                                                       "${workspaceFolder}"
                                                   ],
                                          "description":  "Read/write files in current project"
                                      },
                       "git":  {
                                   "command":  "npx",
                                   "args":  [
                                                "-y",
                                                "@modelcontextprotocol/server-git",
                                                "--repository",
                                                "${workspaceFolder}"
                                            ],
                                   "description":  "Git operations in current repo"
                               },
                       "github":  {
                                      "command":  "npx",
                                      "args":  [
                                                   "-y",
                                                   "@modelcontextprotocol/server-github"
                                               ],
                                      "env":  {
                                                  "GITHUB_PERSONAL_ACCESS_TOKEN":  "${GITHUB_TOKEN}"
                                              },
                                      "description":  "GitHub API access"
                                  },
                       "code-intelligence":  {
                                                 "command":  "C:\\Users\\Matt\\AppData\\Local\\Programs\\Python\\Python311\\python.exe",
                                                 "args":  [
                                                              "C:\\AIStack-MCP\\mcp_intelligence_server.py",
                                                              "--workspace",
                                                              "C:\\AIStack"
                                                          ],
                                                 "env":  {
                                                             "OLLAMA_URL":  "http://localhost:11434",
                                                             "QDRANT_URL":  "http://localhost:6333"
                                                         },
                                                 "description":  "AI-powered code analysis (works on ANY project)"
                                             }
                   }
}
