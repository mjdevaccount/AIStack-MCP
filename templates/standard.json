{
  "name": "standard",
  "description": "Standard development workflow - search, analysis, code generation",
  "author": "AIStack-MCP",
  "version": "1.0.0",
  "servers": [
    {
      "name": "code-intelligence",
      "type": "custom",
      "enabled": true,
      "tools": [
        "semantic_search",
        "analyze_patterns",
        "get_context",
        "generate_code",
        "index_workspace",
        "directory_tree",
        "validate_workspace_config"
      ],
      "config": {
        "command": "cmd",
        "args": [
          "/c",
          "python",
          "${workspaceFolder}/../AIStack-MCP/mcp_intelligence_server.py",
          "--workspace",
          "${workspaceFolder}"
        ]
      }
    },
    {
      "name": "filesystem",
      "type": "community",
      "enabled": true,
      "package": "@modelcontextprotocol/server-filesystem",
      "runtime": "node",
      "config": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "${workspaceFolder}"
        ]
      }
    },
    {
      "name": "github",
      "type": "community",
      "enabled": true,
      "package": "@modelcontextprotocol/server-github",
      "runtime": "node",
      "requires_env": ["GITHUB_PERSONAL_ACCESS_TOKEN"],
      "config": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
        }
      }
    }
  ]
}

